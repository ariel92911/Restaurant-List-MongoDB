<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="container mt-5">

  <div class="row justify-content-between mb-5">
    <div class="col-auto mr-auto">
      <a href="/restaurant/new" class="btn btn-outline-info">Create</a>
    </div>
    <div class="col-auto">
      <div class="dropdown mr-3">
        <button class="btn  btn-outline-info dropdown-toggle" type="button" data-toggle="dropdown">
          排序方式
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href={{#if keyword}} "/search/?keyword={{keyword}}&sortTarget=name&sortType=asc"
            {{else}} "/?sortTarget=name&sortType=asc" {{/if}}>A->Z
          </a>
          <a class="dropdown-item" href={{#if keyword}} "/search/?keyword={{keyword}}&sortTarget=name&sortType=desc"
            {{else}} "/?sortTarget=name&sortType=desc" {{/if}}>Z->A</a>
        </div>
      </div>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <a href="/restaurant/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class=" card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="row justify-content-between">
                <div class="col-auto mr-auto">
                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
                <div class="col-auto">
                  <a href="/restaurant/{{this.id}}/edit" class="btn btn-outline-dark btn-sm"><i
                      class="fas fa-edit"></i></a>
                  <form action="/restaurant/{{{this.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-outline-dark btn-sm"><i class="fas fa-trash-alt "></i></button>
                  </form>
                </div>
              </div>



            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>