<!-- ./views/new.handlebars -->

<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">建立新餐廳資訊 <i class="fas fa-utensils"></i></h5>
          <hr>
          <form action="/restaurant" method="POST">

            <div class="form-group form-row">
              <label for="name" class="col-md-4 col-form-label">
                餐廳名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" id="name" placeholder="餐廳名稱">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">
                餐廳類別
              </label>
              <div class="col-md-8">
                <input type="text" name="category" class="form-control" id="category" placeholder="">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="image" class="col-md-4 col-form-label">
                餐聽圖片
              </label>
              <div class="col-md-8">
                <input type="text" name="image" class="form-control" id="image" placeholder="">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="location" class="col-md-4 col-form-label">
                地址
              </label>
              <div class="col-md-8">
                <input type="text" name="location" class="form-control" id="location" placeholder="地址">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="phone" class="col-md-4 col-form-label">
                電話
              </label>
              <div class="col-md-8">
                <input type="text" name="phone" class="form-control" id="phone" placeholder="電話">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="google_map" class="col-md-4 col-form-label">
                Google map
              </label>
              <div class="col-md-8">
                <input type="text" name="google_map" class="form-control" id="google_map" placeholder="">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="rating" class="col-md-4 col-form-label">
                評分
              </label>
              <div class="col-md-8">
                <input type="number" name="rating" class="form-control" id="rating" placeholder="" min="0" max="5"
                  step="0.1">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="description" class="col-md-4 col-form-label">
                描述
              </label>
              <div class="col-md-8">
                <input type="text" name="description" class="form-control" id="description" placeholder="簡單描述這家餐廳..."
                  rows="3">
              </div>
            </div>

            <button class="btn btn-success" type="submit">建立新餐廳</button>
          </form>
        </div>

      </div>
    </div>
  </div>
</div>